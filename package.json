{
    "name": "dracktype",
    "private": true,
    "type": "module",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "full-check": "turbo lint ts-check build test integration-test check-assets --force",
        "prepare": "husky install",
        "pre-commit": "lint-staged",
        "ts-check": "turbo run ts-check",
        "lint": "turbo run lint",
        "lint-be": "turbo run lint --filter @dracktype/backend",
        "lint-fe": "turbo run lint --filter @dracktype/frontend",
        "lint-pkg": "turbo run lint --filter=\"./packages/*\"",
        "oxlint": "turbo run oxlint",
        "oxlint-be": "turbo run oxlint --filter @dracktype/backend",
        "oxlint-fe": "turbo run oxlint --filter @dracktype/frontend",
        "oxlint-pkg": "turbo run oxlint --filter=\"./packages/*\"",
        "build": "turbo run build",
        "build-be": "turbo run build --filter @dracktype/backend",
        "build-fe": "turbo run build --filter @dracktype/frontend",
        "build-pkg": "turbo run build --filter=\"./packages/*\"",
        "test": "turbo run test integration-test",
        "test-be": "turbo run test integration-test --filter @dracktype/backend",
        "test-fe": "turbo run test --filter @dracktype/frontend",
        "test-pkg": "turbo run test --filter=\"./packages/*\"",
        "dev": "turbo run dev --force",
        "dev-be": "turbo run dev --force --filter @dracktype/backend",
        "dev-fe": "turbo run dev --force --filter @dracktype/frontend",
        "dev-pkg": "turbo run dev --force --filter=\"./packages/*\"",
        "start": "turbo run start",
        "start-be": "turbo run start --filter @dracktype/backend",
        "start-fe": "turbo run start --filter @dracktype/frontend",
        "docker": "cd backend && docker compose up",
        "audit-fe": "cd frontend && npm run audit",
        "release": "dracktype-release",
        "release-fe": "dracktype-release --fe",
        "release-be": "dracktype-release --be",
        "release-no-deploy": "dracktype-release --no-deploy",
        "release-dry": "dracktype-release --dry",
        "hotfix": "dracktype-release --hotfix",
        "hotfix-fe": "dracktype-release --hotfix --fe",
        "hotfix-be": "dracktype-release --hotfix --be",
        "hotfix-dry": "dracktype-release --hotfix --dry",
        "pretty-check": "prettier --check .",
        "pretty-check-be": "prettier --check ./backend",
        "pretty-check-fe": "prettier --check ./frontend/src",
        "pretty-check-assets": "prettier --check ./frontend/static",
        "pretty-check-pkg": "prettier --check ./packages",
        "pretty-fix": "prettier --write .",
        "pretty-fix-be": "prettier --write ./backend",
        "pretty-fix-fe": "prettier --write ./frontend/src",
        "pretty-fix-assets": "prettier --write ./frontend/static",
        "pretty-fix-pkg": "prettier --write ./packages",
        "lint-json-assets": "cd frontend && eslint \"./static/**/*.json\"",
        "check-assets": "turbo check-assets --filter @dracktype/frontend",
        "check-assets-quotes": "turbo check-assets --filter @dracktype/frontend  -- quotes",
        "check-assets-languages": "turbo check-assets --filter @dracktype/frontend  -- languages",
        "check-assets-others": "turbo check-assets --filter @dracktype/frontend  -- others",
        "knip": "knip"
    },
    "engines": {
        "node": "22.20.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.7.1",
        "@commitlint/config-conventional": "19.2.2",
        "@vitest/coverage-v8": "3.2.4",
        "conventional-changelog": "6.0.0",
        "eslint": "8.57.1",
        "husky": "8.0.1",
        "knip": "2.19.2",
        "lint-staged": "13.2.3",
        "only-allow": "1.2.1",
        "oxlint": "1.15.0",
        "prettier": "2.8.8",
        "turbo": "2.5.6",
        "vitest": "3.2.4"
    },
    "lint-staged": {
        "*.{json,scss,css,html}": [
            "prettier --write"
        ],
        "*.{ts,js}": [
            "prettier --write",
            "oxlint",
            "eslint"
        ]
    },
    "version": "25.36.0",
    "packageManager": "pnpm@9.6.0"
}
