{
  "name": "@dracktype/util",
  "scripts": {
    "dev": "tsup-node --watch",
    "build": "npm run madge && tsup-node",
    "test": "vitest run",
    "madge": " madge --circular --extensions ts ./src",
    "ts-check": "tsc --noEmit",
    "eslint": "eslint \"./src/**/*.ts\"",
    "oxlint": "oxlint .",
    "lint": "npm run oxlint && npm run eslint"
  },
  "devDependencies": {
    "@dracktype/eslint-config": "workspace:*",
    "@dracktype/tsup-config": "workspace:*",
    "@dracktype/typescript-config": "workspace:*",
    "eslint": "8.57.1",
    "madge": "8.0.0",
    "oxlint": "1.15.0",
    "tsup": "8.5.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "zod": "4.1.11"
  },
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.js"
    }
  }
}
